    <PackageTags>sql;database;pgsql;postgresql;orm;micro-orm</PackageTags>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>PostgreSQL support for TypedSql</Description>
